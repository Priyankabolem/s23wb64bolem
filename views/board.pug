extends layout

block content
  h1= title
    - let rows = Number(query.rows)
    - let cols = Number(query.cols)
    - if (!Number.isInteger(rows) || !Number.isInteger(cols))
      p Invalid input: rows and cols must be integers.
    - else if (rows < 1 || rows > 10)
      p Invalid input: rows must be between 1 and 10.
    - else if (cols < 1 || cols > 10)
      p Invalid input: cols must be between 1 and 10.
    - else
      table#outer
        - for (let i = 0; i < rows; i++)
          tr#middle
            - for (let j = 0; j < cols; j++)
              - let value = (i === j) ? 1 : ((i > j) ? 0 : j-i+1)
              td= value